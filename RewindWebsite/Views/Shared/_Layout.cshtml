<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rewind Luxury Snacks</title>

    <meta name="description" content="@ViewData["MetaDescription"]">
    <meta name="keywords" content="@ViewData["Keywords"]">
    <meta name="author" content="Rewind">
    <meta property="og:title" content="@ViewData["Title"]">
    <meta property="og:description" content="@ViewData["MetaDescription"]">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://rewindsnacks.com">
    <meta property="og:image" content="/images/rewind-logo-purple.png">

    <link rel="canonical" href="https://rewindsnacks.com@(Context.Request.Path)">

    <link rel="icon" type="image/x-icon" href="/favicon.ico">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "Organization",
          "name": "Rewind",
          "url": "https://rewindsnacks.com",
          "logo": "https://rewindsnacks.com/images/rewind-logo-purple.png",
          "description": "Luxury snacks served in 5-star restaurants at budget-friendly prices",
          "address": {
            "@@type": "PostalAddress",
            "addressCountry": "US"
          }
        }
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/images/culinary-movie-logo-design-template-eating-content-logos-food-and-drink-icon-design-vector-removebg-preview.png" alt="Rewind Logo" height="40">
                <span class="brand-name">REWIND</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Pages" asp-action="Terms">Terms</a>
                    </li>
                    <li class="nav-item ms-lg-3">
                        <a class="btn btn-cta" href="tel:+989045159211">
                            <i class="bi bi-telephone"></i> Call Now
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <h5>Rewind</h5>
                    <h5>Powered by <a href="https://www.alihanifdeveloper.com">AliHanif</a></h5>
                    <p>Delicious snacks with attention to detail. Served in 5-star restaurants across the nation.</p>
                    <div class="social-links">
                        <a href="#"><i class="bi bi-facebook"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                        <a href="#"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Products" asp-action="Index">Products</a></li>
                        <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                        <li><a asp-controller="Pages" asp-action="Terms">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>Contact Info</h5>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-geo-alt"></i>Iran - Tehran</li>
                        <li><i class="bi bi-telephone"></i> </li>
                        <li><i class="bi bi-envelope"></i> info@rewindsnacks.com</li>
                    </ul>
                </div>
                <div class="col-lg-3 mb-4">
                    <h5>Call to Action</h5>
                    <p>Ready to experience luxury snacks?</p>
                    <a href="tel:+989045159211" class="btn btn-cta">
                        <i class="bi bi-telephone"></i> Call Now
                    </a>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; @DateTime.Now.Year Rewind. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>Luxury snacks at budget-friendly prices</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>